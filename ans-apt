#!/bin/bash -e

# Shell Script that will auto-call ansible-playbook for me

if [[ $EUID == 0 ]]; then
    echo ""
    echo "Sorry, can't use sudo."
    echo ""
    exit 1
fi

gen_scripts=/Users/$USER/git/generalscripts

function help_text ()
{
cat <<- EOF
My personal shortcutting ansible stuffs!

Options:
    -ua, --update-all       : Updates all Managed Machines
    -uv, --update-virtual   : Updates all Virtual Machines
    -ul, --update-local     : Updates all Local Linux Machines

    -rl, --reboot-linux     : Reboots all Linux Machines
    -rv, --reboot-virtual   : Reboots all Virtual Machines
    -ul, --reboot-local     : Reboots all Local Linux Machines

    -sl, --shutdown-local   : Shutdown Local Linux Machines
    -sv, --shutdown-virtual : Shutdown Virtual Machines

There is not currently an option to shutdown all Managed Linux Machines

    -h,  --help             : this help
EOF
}

case "$1" in
    -ua | --update-all )
        echo ""
        echo "Updating all Managed Linux Machines."
        echo ""
        ansible-playbook -i "$gen_scripts/hosts"  "$gen_scripts/ansible/apt_basic.yml"
        ;;
    -uv | --update-virtual )
        echo "Updating only Virtual Machines";
        ansible-playbook -i "$gen_scripts/hosts"  "$gen_scripts/ansible/apt_basic.yml" --limit=virtual
        ;;
    -ul | --update-local )
        echo "Updating only Local Linux Machines";
        ansible-playbook -i "$gen_scripts/hosts"  "$gen_scripts/ansible/apt_basic.yml" --limit=local-linux
        ;;
    -rl | --reboot-linux )
        echo "Rebooting all Linux Machines";
        ansible-playbook -i "$gen_scripts/hosts" "$gen_scripts/ansible/restart-apt.yml"
        ;;
    -rv | --reboot-virtual )
        echo "Rebooting only Virtual Machines";
        ansible-playbook -i "$gen_scripts/hosts" "$gen_scripts/ansible/restart-apt.yml" --limit=virtual
        ;;
    -m | --monit-reload )
        echo "Reloads monit on all linux machines";
        ansible -i "$gen_scripts/hosts" linux -s -m service -a 'name=monit state=reloaded'
        ;;
    -sl | --shutdown-linux )
        echo "Shutting down all linux devices";
        ansible -i "$gen_scripts/hosts" linux -s -a 'shutdown -h now'
        ;;
    -sv | --shutdown-virtual )
        echo "Shutting down all Virtual Machines";
        ansible -i "$gen_scripts/hosts" virtual -s -a 'shutdown -h now'
        ;;
    -h | --help )
        help_text &&
        exit 0
        ;;
    * )
        help_text &&
        exit 0

esac

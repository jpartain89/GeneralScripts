# This hosts file is specific for when running ansible on my MacBook from
# outside my home network.
# There is specifically no macOS connection parameters.

[nginx]
nginx ansible_host=jpcdi.com ansible_port=22230

[web]
web ansible_host=jpcdi.com ansible_port=22240

[downloader]
downloader ansible_host=jpcdi.com ansible_port=22245

[mark]
mark ansible_host=mdusa.jpcdi.com ansible_port=22

[rpi]
rpi ansible_host=jpcdi.com ansible_port=22234

[virtual:children]
nginx
web
downloader

[local-linux:children]
virtual
rpi

[linux:children]
local-linux
mark

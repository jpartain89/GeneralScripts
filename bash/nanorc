include "${ROOT_NANO}/vala.nanorc"
include "${ROOT_NANO}/vi.nanorc"
include "${ROOT_NANO}/xml.nanorc"
include "${ROOT_NANO}/xresources.nanorc"
include "${ROOT_NANO}/yaml.nanorc"
include "${ROOT_NANO}/yum.nanorc"
include "${ROOT_NANO}/zsh.nanorc"
include "${ROOT_NANO}/dotenv.nanorc"
include "${ROOT_NANO}/html.j2.nanorc"
include "${ROOT_NANO}/svn.nanorc"
include "${ROOT_NANO}/verilog.nanorc"
include "${ROOT_NANO}/etc-hosts.nanorc"
include "${ROOT_NANO}/jade.nanorc"
include "${ROOT_NANO}/nmap.nanorc"
include "${ROOT_NANO}/pug.nanorc"
EOF

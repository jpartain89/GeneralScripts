#!/usr/bin/env bash

GIT_REPO="https://github.com/scopatz/nanorc.git"
if [[ "$(uname)" == "Darwin" ]]; then
    ROOT_NANO="/usr/local/share/nano-syntax-highlighting"
else
    ROOT_NANO="/usr/share/nano-syntax-highlighting"
fi

git rev-parse "${ROOT_NANO}" &>/dev/null ||
    sudo git clone "${GIT_REPO}" "${ROOT_NANO}"


cat << EOF > /etc/nanorc
set locking
set matchbrackets "(<[{)>]}"
set tabsize 2
set tabstospaces
set nowrap

include "${ROOT_NANO}/apacheconf.nanorc"
include "${ROOT_NANO}/arduino.nanorc"
include "${ROOT_NANO}/asciidoc.nanorc"
include "${ROOT_NANO}/asm.nanorc"
include "${ROOT_NANO}/awk.nanorc"
include "${ROOT_NANO}/c.nanorc"
include "${ROOT_NANO}/clojure.nanorc"
include "${ROOT_NANO}/cmake.nanorc"
include "${ROOT_NANO}/coffeescript.nanorc"
include "${ROOT_NANO}/colortest.nanorc"
include "${ROOT_NANO}/conf.nanorc"
include "${ROOT_NANO}/csharp.nanorc"
include "${ROOT_NANO}/css.nanorc"
include "${ROOT_NANO}/cython.nanorc"
include "${ROOT_NANO}/dot.nanorc"
include "${ROOT_NANO}/email.nanorc"
include "${ROOT_NANO}/Dockerfile.nanorc"
include "${ROOT_NANO}/fish.nanorc"
include "${ROOT_NANO}/fortran.nanorc"
include "${ROOT_NANO}/gentoo.nanorc"
include "${ROOT_NANO}/git.nanorc"
include "${ROOT_NANO}/gitcommit.nanorc"
include "${ROOT_NANO}/glsl.nanorc"
include "${ROOT_NANO}/go.nanorc"
include "${ROOT_NANO}/groff.nanorc"
include "${ROOT_NANO}/haml.nanorc"
include "${ROOT_NANO}/haskell.nanorc"
include "${ROOT_NANO}/html.nanorc"
include "${ROOT_NANO}/ical.nanorc"
include "${ROOT_NANO}/ini.nanorc"
include "${ROOT_NANO}/inputrc.nanorc"
include "${ROOT_NANO}/java.nanorc"
include "${ROOT_NANO}/javascript.nanorc"
include "${ROOT_NANO}/js.nanorc"
include "${ROOT_NANO}/json.nanorc"
include "${ROOT_NANO}/keymap.nanorc"
include "${ROOT_NANO}/kickstart.nanorc"
include "${ROOT_NANO}/ledger.nanorc"
include "${ROOT_NANO}/lisp.nanorc"
include "${ROOT_NANO}/lua.nanorc"
include "${ROOT_NANO}/makefile.nanorc"
include "${ROOT_NANO}/man.nanorc"
include "${ROOT_NANO}/markdown.nanorc"
include "${ROOT_NANO}/mpdconf.nanorc"
include "${ROOT_NANO}/mutt.nanorc"
include "${ROOT_NANO}/nanorc.nanorc"
include "${ROOT_NANO}/nginx.nanorc"
include "${ROOT_NANO}/ocaml.nanorc"
include "${ROOT_NANO}/patch.nanorc"
include "${ROOT_NANO}/peg.nanorc"
include "${ROOT_NANO}/perl.nanorc"
include "${ROOT_NANO}/perl6.nanorc"
include "${ROOT_NANO}/php.nanorc"
include "${ROOT_NANO}/pkg-config.nanorc"
include "${ROOT_NANO}/pkgbuild.nanorc"
include "${ROOT_NANO}/po.nanorc"
include "${ROOT_NANO}/pov.nanorc"
include "${ROOT_NANO}/privoxy.nanorc"
include "${ROOT_NANO}/puppet.nanorc"
include "${ROOT_NANO}/python.nanorc"
include "${ROOT_NANO}/reST.nanorc"
include "${ROOT_NANO}/rpmspec.nanorc"
include "${ROOT_NANO}/ruby.nanorc"
include "${ROOT_NANO}/rust.nanorc"
include "${ROOT_NANO}/scala.nanorc"
include "${ROOT_NANO}/sed.nanorc"
include "${ROOT_NANO}/sh.nanorc"
include "${ROOT_NANO}/sls.nanorc"
include "${ROOT_NANO}/sql.nanorc"
include "${ROOT_NANO}/swift.nanorc"

# Program information
logdir="/var/log/backup_rsync.log"
logfile="${logdir}/$(date +%m-%d-%Y_%H.%M.%S).log";

function log_function {
  if [ ! -d "$logdir" ]; then
    sudo mkdir "${logdir}"
    sudo chown -R :admin "${logfile}"
    sudo chmod 0775 "${logfile}"
  fi
  [ ! -e "$logfile" ] && touch "$logfile"
}

source_dir="/"
backup_dir="rsync://192.168.1.15/backup/$(hostname)/$(date +%m-%d-%Y_%H.%M.%S)"

trap 'exit 1' SIGHUP SIGINT SIGTERM

function main {
  rsync -aAXv --info=progress2 \
    --exclude={"/dev/*","/proc/*","/sys/*","/tmp/*","/run/*","/mnt/*","/media/*","/lost+found"} \
    "$source_dir" "$backup_dir"
}

log_function
( main >>"$logfile" 2>&1 & ) &
